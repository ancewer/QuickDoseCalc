<Window x:Class="QuickDoseCalc.MyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickDoseCalc"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Define the grid with 3 rows and 3 columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Place 3 buttons in different grid cells -->
        <StackPanel Grid.Row="0" Grid.Column="0">
            <Label>Select Plan</Label>
            <ComboBox x:Name="comboBox_SelectPlan" DropDownClosed="comboBox_SelectPlan_DropDownClosed"></ComboBox>
            <Label Content=":" x:Name="label_FxDoseValue"></Label>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="2">
            <StackPanel>
            <CheckBox x:Name="checkBox_ForceReCalc" Content="ForceReCalc" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                <Button x:Name="button_Start" Content="Start" VerticalAlignment="Center" Width="100" Height="50" FontSize="25" Click="button_Start_Click" Margin="0,50,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
            <!--<Button Content="Button 2" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
            <!--<Button  Content="Button 3" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
        </StackPanel>

        <TextBox Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" x:Name="textBox_Console" Margin="5">show progress here...</TextBox>
    </Grid>
</Window>
